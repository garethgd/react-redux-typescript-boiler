  "private": true,
  "dependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-redux": "^5.0.7",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-scripts-ts": "2.6.0",
    "redux": "^3.7.2"
  },
  "scripts": {
    "start": "react-scripts-ts start && npm run watch-css",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
